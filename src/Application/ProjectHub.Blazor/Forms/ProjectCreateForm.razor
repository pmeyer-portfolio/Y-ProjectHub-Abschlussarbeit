@using ProjectHub.Blazor.Components.DataGrids

<Div Class="rz-p-0 rz-p-md-12">
    <RadzenRow Gap="1rem">
        <RadzenColumn Size="12" SizeSM="6">
            <RadzenStack>
                <DataAnnotationsValidator/>
                <RadzenFormField Text="Titel" Variant="Variant.Outlined">
                    <RadzenTextBox @bind-Value="@ProjectCreateDto.Title"/>
                </RadzenFormField>
                <DataAnnotationsValidator/>
                <RadzenFormField Text="Beschreibung" Variant="Variant.Outlined">
                    <RadzenHtmlEditor style="height: 350px; width: 300px" Change="OnChange">
                        <RadzenHtmlEditorFontSize/>
                        <RadzenHtmlEditorUndo/>
                        <RadzenHtmlEditorRedo/>
                        <RadzenHtmlEditorSeparator/>
                        <RadzenHtmlEditorBold/>
                        <RadzenHtmlEditorItalic/>
                        <RadzenHtmlEditorUnderline/>
                        <RadzenHtmlEditorSeparator/>
                        <RadzenHtmlEditorRemoveFormat/>
                        <RadzenHtmlEditorAlignCenter/>
                        <RadzenHtmlEditorAlignLeft/>
                        <RadzenHtmlEditorAlignRight/>
                        <RadzenHtmlEditorUnorderedList/>
                        <RadzenHtmlEditorOrderedList/>
                    </RadzenHtmlEditor>
                </RadzenFormField>
            </RadzenStack>
        </RadzenColumn>
        <RadzenColumn Size="12" SizeSM="6">
            <RadzenStack>
                <TribeDropDownDataGrid OnTribeIdSelected="HandleTribeSelected"/>
                <ProgrammingLanguageDropDownDataGrid OnItemSelected="HandleLanguageSelected"/>
                <RadzenButton Text="Erstellen"
                              Icon="add"
                              ButtonType="ButtonType.Submit"
                              ButtonStyle="ButtonStyle.Primary"
                              Size="ButtonSize.Medium"/>
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
</Div>