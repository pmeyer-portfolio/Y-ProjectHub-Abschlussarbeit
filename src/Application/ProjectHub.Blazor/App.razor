@using ProjectHub.Blazor.Shared
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin/>
                    }
                    else
                    {
                        <p role="alert">Sie sind nicht berechtigt, auf diese Ressource zuzugreifen.</p>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
        </Found>
        <NotFound>
            <PageTitle>Nicht gefunden.</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Entschuldigung, unter dieser Adresse gibt es keinen Content.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>