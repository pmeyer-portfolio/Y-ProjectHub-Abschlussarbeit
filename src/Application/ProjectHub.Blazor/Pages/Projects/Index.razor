@using ProjectHub.Blazor.Services.Contracts
@using ProjectHub.Blazor.Constants
﻿@using ProjectHub.Blazor.Services.Contracts

@attribute [Route(ProjectHubRoute.Projects)]
@inject IProjectService ProjectService

<h3>Auflistung Projekte</h3>

@if (response.Success == false)
{
    <div class="alert alert-danger">
        <h4>@response.ValidationErrors</h4>
    </div>
}
else
{
    @if (response.Data == null)
    {
        <div class="alert alert-info">
            <h4>Loading Data...</h4>
        </div>
    }
    else
    {
        <br/>
        <Table Projects="response.Data.ToList()"></Table>
    }
}