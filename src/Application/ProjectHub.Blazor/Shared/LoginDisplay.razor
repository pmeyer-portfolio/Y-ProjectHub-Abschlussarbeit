@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        Hallo, @context.User.Identity!.Name.
        <RadzenButton Variant="Variant.Outlined" Shade="Shade.Light" @onclick="this.BeginLogOut" Click="@(_ => this.BeginLogOut())" Text="Log out" ButtonStyle="ButtonStyle.Info"/>
    </Authorized>
    <NotAuthorized>
        <RadzenButton Variant="Variant.Outlined" Shade="Shade.Light" @onclick="this.BeginLogIn" Click="@(_ => this.BeginLogIn())" Text="Log in" ButtonStyle="ButtonStyle.Info"/>
    </NotAuthorized>
</AuthorizeView>